<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Maise" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/on_surface</item>
        <item name="colorOnPrimary">@color/app_background</item>
        <item name="colorPrimaryVariant">@color/surface</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="android:windowBackground">@color/app_background</item>
        <item name="android:textColorPrimary">@color/on_surface</item>
        <item name="android:textColorSecondary">@color/hint_text</item>
        <item name="android:statusBarColor">@color/app_background</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <!-- Filled text field with no stroke and fully rounded corners -->
    <style name="RoundedFilledInput" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundColor">@color/surface</item>
        <item name="shapeAppearanceOverlay">@style/RoundedCornerShape</item>
        <item name="hintTextColor">@color/hint_text</item>
        <item name="android:textColorHint">@color/hint_text</item>
    </style>

    <style name="RoundedCornerShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>
